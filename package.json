{
  "name": "sistema-paints",
  "version": "1.0.0",
  "description": "Sistema de gesti√≥n para cadena de pinturas Paints - Proyecto Universidad UMES",
  "main": "backend/server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "live-server frontend/",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npm run db:migrate && npm run db:seed",
    "db:fresh": "npm run db:reset",
    "test": "echo \"Error: no test specified\" && exit 1",
    "backup": "node backend/utils/backup.js"
  },
  "keywords": [
    "sistema-paints",
    "node.js",
    "express",
    "sequelize",
    "mysql",
    "mvc",
    "umes"
  ],
  "author": "Estudiante UMES",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.10",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "sequelize-cli": "^6.6.3"
  }
}